<h3 class="text-center text-primary">Forgot your password?</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="m-3">
    <%= f.label :email, class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter register email address", :required => true %>
  </div>

  <div class="m-3">
    <%= f.submit "Send me reset password instructions", class:"btn btn-primary rounded-pill" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
