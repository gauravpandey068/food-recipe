<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="m-3">
        <%= f.text_field :user_id , value: current_user.id %>
        <%= f.label :comment %>
        <div class="control">
            <%= f.text_area :comment, class:"input",  placeholder:"Leave a Message", :required => true   %>
        </div>
  </div>
  <div class="field">
       <%= f.submit  class:"button is-success" %>
  </div>
<% end %>
