<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
            <%= @users.find(comment.user_id).email %>
            <br/>
            <%= comment.comment %>
        </p>
      </div>
    </div>
    <% if current_user.id == comment.user_id %>
        <%= link_to 'Delete', [comment.post, comment], method: :delete, class:"button is-danger", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </article>
</div>
