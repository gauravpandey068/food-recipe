<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Category</th>
      <th>Ingredients</th>
      <th>Method</th>
      <th>Prep</th>
      <th>Cook</th>
      <th>Difficult</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.image %></td>
        <td><%= post.description %></td>
        <td><%= post.category %></td>
        <td><%= post.ingredients %></td>
        <td><%= post.method %></td>
        <td><%= post.prep %></td>
        <td><%= post.cook %></td>
        <td><%= post.difficult %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
