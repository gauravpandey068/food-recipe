<div class="card mb-5">
  <div class="card-header text-center text-success text-capitalize bg-white">
    <h4><%= @post.title %></h4>
  </div>
  <div class="card-body mb-5">
    <h5 class="card-title fs-1"><%= @post.title %></h5>
    <p class="mt-3 mb-3">
      <span class="badge bg-info text-dark p-2"> <%= @categories.find(@post.category).name %></span>
      <span class="card-text p-2 badge bg-primary">Prepration Time <%= @post.prep %> minutes</span>
      <span class="card-text p-2 badge bg-secondary ">Cooking Time <%= @post.cook %> minutes</span>
      <span class="card-text p-2 badge bg-success">Difficult <%= @post.difficult %></span>
    </p>
    <%= image_tag @post.image, class:"img-fluid" %>
    <p class="card-text mt-3"> <%= simple_format(@post.description) %></p>
    <p class="card-text"><span class="text-danger fs-1">Ingredients</span><%= simple_format(@post.ingredients) %></p>
    <p class="card-text"><span class="text-danger fs-1">Methods</span><%= simple_format(@post.method) %></p>
  </div>
</div>
<section class="comments section">
  <h2 class="subtitle is-5">
    <span class="tag is-primary"> <%= @post.comments.count %> </span> Comments
  </h2>
  <%= render @post.comments %>
  <% if user_signed_in? %>
    <div class="comments-form">
      <h3 class="subtitle is-4">Leave a comment</h3>
      <%= render 'comments/form' %>

    </div>
  <% else %>
    <div class="card">
      <div card-body>
        Login to Comments
      </div>
    </div>
  <% end %>
</section>