<div class="row">
    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-header text-center ">
                    <%= link_to 'Add New Category', new_category_path %>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                            <th scope="col">Category Name</th>
                            <th colspan="3">Actions</th>
                        </thead>
                        <tbody>
                            <% @categories.each do |category| %>
                                <tr>
                                    <td><%= category.name %> </td>
                                    <td><%= link_to 'Edit', edit_category_path(category) %></td>
                                    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header text-center">
                    <%= link_to 'New Post', new_post_path %>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                            <th scope="col">Title</th>                           
                            <th scope="col">Category</th>
                            <th colspan="3">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% @posts.each do |post| %>
                            <tr>
                                <td><%= post.title %></td>
                                <td><%= @categories.find(post.category).name %></td>
                                <td><%= link_to 'View', post %></td>
                                <td><%= link_to 'Edit', edit_post_path(post) %></td>
                                <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    
  